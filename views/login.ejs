<!--     <a class="navbar-brand" href="../index.ejs">Home</a> -->
    <a class="navbar-brand" href="/">Home</a>
    <a class="navbar-brand" href="/signup">Signup</a>
  </div><br><br>


  <div class="container text-center">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Log In</h1>
        <hr>

        <form id="login-form" method="POST" action="/sessions"> <!--onsubmit="return validateForm()"-->
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email" autofocus required>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>
          <div class="form-group">
            <input type="submit" value="Log In" class="btn btn-primary" name="loginButton" id="loginBtn">
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
